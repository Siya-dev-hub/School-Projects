@model DisasterDonationAlleviationApp.Models.AllocateGoodsViewModel

@{
    ViewData["Title"] = "Allocate Goods";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Allocate" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="SelectedDisasterId">Disaster</label>
        <select asp-for="SelectedDisasterId" class="form-control" asp-items="ViewBag.DisasterSelectList">
            <option value="">Select Disaster</option>
        </select>
        @Html.ValidationMessageFor(model => model.SelectedDisasterId)
    </div>

    <div class="form-group">
        <label for="SelectedGoodsId">Goods Donation</label>
        <select asp-for="SelectedGoodsId" class="form-control" asp-items="ViewBag.GoodsDonationSelectList">
            <option value="">Select Goods Donation</option>
        </select>
        @Html.ValidationMessageFor(model => model.SelectedGoodsId)
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>

    <button type="submit" class="btn btn-primary">Allocate Goods</button>
</form>
