@model DisasterDonationAlleviationApp.Models.GoodsDonation
@{
}
<h2>Create Goods Donation</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Date" class="control-label">Donation Date</label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfItems" class="control-label">Number of Items</label>
        <input asp-for="NumberOfItems" class="form-control" />
        <span asp-validation-for="NumberOfItems" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="Clothes">Clothes</option>
            <option value="Non-perishable foods">Non-perishable foods</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAnonymous" class="control-label">Anonymous Donation</label>
        <input asp-for="IsAnonymous" type="checkbox" class="form-control" />
        <span asp-validation-for="IsAnonymous" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>