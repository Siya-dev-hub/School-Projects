<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Disaster.StartDate" class="control-label">Start Date</label>
        <input asp-for="Disaster.StartDate" class="form-control" />
        <span asp-validation-for="Disaster.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Disaster.EndDate" class="control-label">End Date</label>
        <input asp-for="Disaster.EndDate" class="form-control" />
        <span asp-validation-for="Disaster.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Disaster.Location" class="control-label">Location</label>
        <input asp-for="Disaster.Location" class="form-control" />
        <span asp-validation-for="Disaster.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Disaster.Description" class="control-label">Description</label>
        <textarea asp-for="Disaster.Description" class="form-control"></textarea>
        <span asp-validation-for="Disaster.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="aidTypes">Aid Types</label>
        <select asp-for="SelectedAidTypes" asp-items="@(new SelectList(Model.AidTypes, "Id", "Type"))" multiple="multiple" class="form-control">
            @foreach (var aidType in Model.AidTypes)
            {
                <option value="@aidType.Id">@aidType.Type</option>
            }
        </select>
        <span asp-validation-for="SelectedAidTypes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>