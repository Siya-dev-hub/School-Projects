@model AllocateMoneyViewModel
@{
    ViewData["Title"] = "Allocate Money";
}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Allocate Money</h1>
    </div>

    <form asp-action="AllocateMoney" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="mb-3">
            <label for="MonetaryDonationId" class="form-label">Money Donation</label>
            <select asp-for="MonetaryDonationId" class="form-select" id="MonetaryDonationId" required
                    asp-items="@(Model.UnallocatedMonetaryDonations != null && Model.UnallocatedMonetaryDonations.Any()
                ? new SelectList(Model.UnallocatedMonetaryDonations, "Id", "Amount")
                : new List<SelectListItem>())">
                <option value="">-- Select Monetary Donation --</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="DisasterId" class="form-label">Disaster</label>
            <select asp-for="DisasterId" class="form-select" id="DisasterId" required
                    asp-items="@(Model.ActiveDisasters != null && Model.ActiveDisasters.Any()
                ? new SelectList(Model.ActiveDisasters, "Id", "Location")
                : new List<SelectListItem>())">
                <option value="">-- Select Disaster --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Allocate</button>
    </form>
</div>
