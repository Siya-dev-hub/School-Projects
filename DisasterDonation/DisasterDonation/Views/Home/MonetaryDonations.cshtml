@{
    ViewData["Title"] = "Monetary Donation";
}

@model List<DisasterDonation.Models.MonetaryDonation>

<div class="container text-center">
    <h1 class="display-4 mt-5">Monetary Donations</h1>
    <a asp-controller="Home" asp-action="CreateEditMonetaryDonation" class="btn btn-secondary mb-3">Create New</a>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Amount (R)</th>
                <th>Is Anonymous</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var monetaryDonation in Model)
                {
                    <tr>
                        <td>@monetaryDonation.Id</td>
                        <td>@monetaryDonation.Date.ToString("yyyy-MM-dd")</td> <!-- Format date -->
                        <td>@monetaryDonation.Amount</td>
                        <td>@(monetaryDonation.IsAnonymous ? "Yes" : "No")</td> <!-- Display "Yes" or "No" -->
                        <td>
                            <a asp-action="CreateEditMonetaryDonation" asp-route-id="@monetaryDonation.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeleteMonetaryDonation" asp-route-id="@monetaryDonation.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No monetary donations available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
