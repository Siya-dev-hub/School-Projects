@model DisasterDonation.Models.MonetaryDonation
@{
    ViewData["Title"] = "Create/Edit Monetary Donation";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Create or Edit a Monetary Donation</h1>
    </div>

    <form asp-action="CreateEditMonetaryDonationForm" asp-controller="Home" class="bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="Id" class="form-control" />

        <div class="mb-3">
            <label class="form-label">Date of Donation</label>
            <input class="form-control" type="date" asp-for="Date" />
        </div>

        <div class="mb-3">
            <label class="form-label">Value R</label>
            <input class="form-control" type="number" placeholder="Add an amount" asp-for="Amount" step="0.01" />
        </div>

        <div class="mb-3 form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsAnonymous" />
            <label class="form-check-label" for="IsAnonymous">Anonymous Donor</label>
        </div>

        <button class="btn btn-primary" type="submit">Ok</button>
    </form>
</div>
